doctype html
html(lang='en', ng-app='greenchat')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title #{title}
        link(href='assets/css/app.css', rel='stylesheet', type='text/css')
        link(href='assets/css/my.css', rel='stylesheet', type='text/css')
        script(src='assets/js/routes.js')
        script(src='assets/js/foundation.js')
        script(src='assets/js/angular.js')
        script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.3/angular-route.min.js")
        script(src='assets/js/jquery.js')
        script(src='assets/js/greenchat.js')
        script(src="https://cdn.firebase.com/js/client/2.2.9/firebase.js")
        script(src="https://cdn.firebase.com/libs/angularfire/1.1.2/angularfire.min.js")

        //controllers
        script(src='assets/js/controllers/mainController.js')
        script(src='assets/js/controllers/roomController.js')
    style.
        .message-input, .message-input .inline-label, .menu-bar {margin-bottom: 0;}
        #sidebar, .messages {border-right: 1px solid #eee;}
        .message-side-bar {border-left: 1px solid #eee;}
        .avatar-section {border-top: 1px solid #eee;}
    body(ng-controller='greenchatCtrl')
        .grid-frame
            .grid-block.collapse.medium-12.large-12.vertical
                #header.shrink.collapse.grid-content
                    h3 Coca-Cola Chat
                .grid-block
                    #sidebar.grid-block.small-12.medium-3.vertical(zf-panel='', position='left')
                        .grid-content.collapse.shrink.hide-for-medium
                            a.secondary.button.expand(href='', zf-close='') Close
                        .grid-content.collapse.shrink
                            img(src='http://placehold.it/400x150&text=Logo')
                        .grid-content
                            section.block-list
                                header Rooms
                                ul
                                    li(ng-repeat="room in data.rooms")
                                        a(ng-href='#/{{room.room_value}}')
                                            | {{room.room_name}}
                                            span.block-list-label {{room.users.length}}

                        .grid-content.collapse.shrink.avatar-section
                            img(src='http://placehold.it/50x50')
                            |             {{currentUserName}}
                    .grid-block.small-12.medium-6.vertical
                        ng-view
                    .grid-content.medium-3.show-for-medium.message-side-bar
                        section.block-list
                            header In This Room
                            ul
                                li
                                    a(href='#') Cady Heron
                                li
                                    a(href='#') Kevin Gnapoor
                                li
                                    a(href='#') Trang Pak
                                li
                                    a(href='#') Coach Carr
                                li
                                    a(href='#') Regina George


        script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.3.5/socket.io.js")
