doctype html
html(lang='en', ng-app='chat')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title #{title}
        link(href='assets/css/app.css', rel='stylesheet', type='text/css')
        link(href='assets/css/main.css', rel='stylesheet', type='text/css')
        script(src='assets/js/app.js')
        script(src='assets/js/routes.js')
        script(src='assets/js/angular.js')
        //controllers
        script(src='assets/js/controllers/mainController.js')
    style.
        .message-input, .message-input .inline-label, .menu-bar {margin-bottom: 0;}
        #sidebar, .messages {border-right: 1px solid #eee;}
        .message-side-bar {border-left: 1px solid #eee;}
        .avatar-section {border-top: 1px solid #eee;}
